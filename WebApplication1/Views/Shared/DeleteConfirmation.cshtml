@model WebApplication1.Models.MyViewModel

@if(Model.Department != null)
{
    <form asp-action="DeleteDepartment" asp-controller="Home" asp-route-guid="@Model.Department.Id" asp-route-confirmed="true">
        <div>
            <h6>Удалить отдел @Model.Department.Name ?</h6>
            <h9>Вы уверены? Удаление окончательное, это действие нельзя будет  отменить.</h9>
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger mt-3" />
            <a href="EditDepartment?guid=@Model.Department.Id" class="btn btn-primary mt-3">Отмена</a>
        </div>
    </form>
}
@if(Model.Employee != null)
{
    <form asp-action="DeleteEmployee" asp-controller="Employee" asp-route-guid="@Model.Employee.Id" asp-route-confirmed="true">
        <div>
            <h6>Удалить сотрудника @Model.Employee.FirstName @Model.Employee.SurName ?</h6>
            <h9>Вы уверены? Удаление окончательное, это действие нельзя будет отменить.</h9>
        </div>
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger mt-3" />
                <a href="../GetEmployee/@Model.Employee.Id" class="btn btn-primary mt-3">Отмена</a>
        </div>
    </form>
}